{
  "name": "affinity",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://www.urbanoutfitters.com/*"],
      "js": ["content.js", "content-adjust-layout.js", "content-initial-layout.js"],
      "css": ["style.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Affinity"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["tabs", "storage"]
}
